#!python3

import os
import time
from colorama import Fore, Style
from subprocess import Popen


def build():
    print(
        f"üîé {Style.BRIGHT+Fore.CYAN}(1/4) Verifying packages are installed{Style.RESET_ALL}")
    Popen('cd ../backend && npm i', shell=True).wait()

    print(
        f"\nüßπ {Style.BRIGHT+Fore.CYAN}(2/4) Cleaning up previous build{Style.RESET_ALL}")
    Popen('rm -rf ../backend/build', shell=True).wait()

    print(
        f"\nüß™ {Style.BRIGHT+Fore.CYAN}(3/4) Compiling typescript{Style.RESET_ALL}")
    typescriptCompilation = Popen("cd ../backend && npx tsc", shell=True).wait()
    if typescriptCompilation > 0:
        return typescriptCompilation

    print(f"\nüî® {Style.BRIGHT+Fore.CYAN}(4/4) Installing node_modules in layer/nodejs folder{Style.RESET_ALL}")
    packages = Popen(
        "cd ../backend && mkdir -p layer/nodejs && cp package.json package-lock.json layer/nodejs && cd layer/nodejs && npm i", shell=True).wait()
    if packages > 0:
        return packages


print()
start = time.time()
result = build()
end = time.time()
print()

if not result:
    print(f"{Style.BRIGHT+Fore.LIGHTGREEN_EX}‚úÖ Build complete in {end-start:.2f}s{Style.RESET_ALL}")
else:
    print(f"{Style.BRIGHT+Fore.RED}‚ùå Build failed in {end-start:.2f}s with code {result}{Style.RESET_ALL}")
print('\n')
